<div class="featured-products page-width">
  {% if section.settings.title != blank %}
    <h2>{{ section.settings.title }}</h2>
  {% endif %}

  <div class="products-list">
    {% assign product_count = section.blocks | size %}

    {% if product_count > 4 %}
      <div class="product-slider">
        {% for block in section.blocks %}
          {% if block.settings.product != blank %}
            {% assign product = all_products[block.settings.product] %}
            <div class="product-item">
              {% render 'card-product',
                card_product: product,
                media_aspect_ratio: section.settings.image_ratio,
                image_shape: section.settings.image_shape,
                show_secondary_image: section.settings.show_secondary_image,
                show_vendor: section.settings.show_vendor,
                show_rating: section.settings.show_rating,
                show_quick_add: section.settings.enable_quick_add,
                section_id: section.id
              %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="product-grid">
        {% for block in section.blocks %}
          {% if block.settings.product != blank %}
            {% assign product = all_products[block.settings.product] %}
            <div class="product-item">
              {% render 'card-product',
                card_product: product,
                media_aspect_ratio: section.settings.image_ratio,
                image_shape: section.settings.image_shape,
                show_secondary_image: section.settings.show_secondary_image,
                show_vendor: section.settings.show_vendor,
                show_rating: section.settings.show_rating,
                show_quick_add: section.settings.enable_quick_add,
                section_id: section.id
              %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>

  {% comment %}
    {% if product_count > 4 %}
      <div class="slider-product-proposal__control">
        <button type="button" class="slick-arrow slick-prev arrow-control control-prev">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            height="40px"
            viewBox="0 -960 960 960"
            width="40px"
            fill="{{ section.settings.navigation_color }}"
          >
            <path d="M400-80 0-480l400-400 61 61.67L122.67-480 461-141.67 400-80Z"/>
          </svg>
        </button>
        <button type="button" class="slick-arrow slick-next arrow-control control-next">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            height="40px"
            viewBox="0 -960 960 960"
            width="40px"
            fill="{{ section.settings.navigation_color }}"
          >
            <path d="m309.67-81.33-61-61.67L587-481.33 248.67-819.67l61-61.66 400 400-400 400Z"/>
          </svg>
        </button>
      </div>
    {% endif %}
  {% endcomment %}
</div>

{% if product_count > 4 %}
  <script>
    $(document).ready(function () {
      $('.product-slider').slick({
        slidesToShow: 4,
        slidesToScroll: 1,
        autoplay: true,
        autoplaySpeed: 2000,
        // prevArrow: $('#shopify-section-{{section.id}} .control-prev'),
        // nextArrow: $('#shopify-section-{{section.id}} .control-next'),
        responsive: [
          {
            breakpoint: 1024,
            settings: {
              slidesToShow: 3,
              slidesToScroll: 3,
              infinite: true,
            },
          },
          {
            breakpoint: 600,
            settings: {
              slidesToShow: 2,
              slidesToScroll: 2,
            },
          },
          {
            breakpoint: 480,
            settings: {
              slidesToShow: 1,
              slidesToScroll: 1,
            },
          },
        ],
      });
    });
  </script>
{% endif %}

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Заголовок",
      "default": "Рекомендовані продукти"
    },
    {
      "type": "color",
      "id": "navigation_color",
      "label": "Колір стрілок",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Верхній падінг",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 5
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Нижній падінг",
      "default": 10,
      "min": 0,
      "max": 50,
      "step": 5
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Продукт",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Виберіть продукт"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Рекомендовані продукти",
      "category": "Custom"
    }
  ]
}
{% endschema %}
